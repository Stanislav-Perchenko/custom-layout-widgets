<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="cornerRadius" format="dimension" />


    <declare-styleable name="TagsLayout">
        <attr name="tl_itemLayoutResId" format="reference"/>
        <attr name="tl_textViewResId" format="reference"/>
        <attr name="tl_itemBackground" format="reference"/>
        <attr name="tl_useDataItemsColor" format="boolean"/>
        <attr name="tl_fallbackItemColor" format="color"/>

        <attr name="tl_min_item_distance" format="dimension"/>
        <attr name="tl_max_item_distance_for_reordered" format="dimension"/>
        <attr name="tl_useExtraSpace" format="boolean"/>
        <attr name="tl_autoReorder" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CheckableTagsLayout">
        <attr name="ctl_min_item_distance" format="dimension"/>
        <attr name="ctl_multipleChoice" format="boolean"/>
        <attr name="ctl_layoutMode" format="enum">
            <enum name="no_reorder_wrap_content" value="0"/>
            <enum name="no_reorder_match_parent" value="1"/>
            <enum name="reorder_wrap_content"    value="2"/>
            <enum name="reorder_match_parent"    value="3"/>
            <enum name="no_reorder_equal_width"  value="4"/>
        </attr>
    </declare-styleable>

    <!--  ReadMoreTextView  -->
    <declare-styleable name="ReadMoreTextView">
        <attr name="readMore_text" format="string" />
        <attr name="readMore_textStyle" format="enum" >
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
        <attr name="readMore_textColor" format="color" />
        <attr name="readMore_clickable" format="boolean" />
        <attr name="debugMode" format="boolean" />
    </declare-styleable>

    <!--  DiscreteSeekBar  -->
    <declare-styleable name="DiscreteSeekBar">
        <attr name="colorAxisPoint" format="color"/>
        <attr name="colorUnselected" format="color"/>
        <attr name="colorSelected" format="color"/>
        <attr name="colorHighlighted" format="color"/>
        <attr name="axisStrokeWidth" format="dimension"/>
        <attr name="axisToMarkerSpace" format="dimension"/>
        <attr name="setableManually" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PrepassListItemColorView">
        <attr name="colorWidth" format="dimension"/>
        <attr name="colorCorners" format="dimension"/>
    </declare-styleable>

    <!--  RoundedCornersDecorationView  -->
    <declare-styleable name="RoundedCornersDecorationView">
        <attr name="cornerRadius" />
        <attr name="cornerLeftTop" format="dimension" />
        <attr name="cornerTopRight" format="dimension" />
        <attr name="cornerRightBottom" format="dimension" />
        <attr name="cornerBottomLeft" format="dimension" />
        <attr name="fillColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LimitedStretchingItemHorizontalLayout">
        <attr name="limitedStratchingItemId" format="reference" />
    </declare-styleable>


</resources>