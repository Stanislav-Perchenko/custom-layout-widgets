<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.alperez.widget.customlayout.ReadMoreTextView android:id="@+id/txt_read_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:maxLines="4"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="#B5B5B5"
            android:textColor="#000"
            app:readMore_text="...read more"
            app:readMore_clickable="true"
            app:readMore_textColor="#4545E0"
            app:readMore_textStyle="normal"
            app:debugMode="true"
            android:ellipsize="end"
            android:text="Tsdofjsdo fsd fiosdhf sdofhsdof dfgdhggdh fgdfg dfg df gdfgdfg dfbfgfg sdfhsdfsdf fgdfgghuihguhfuhgsdiofh8abcdefghijklmnopqrstuvwxyz dfgdfgh dfoghdfogh dfogh psfgipsdjfpjsdpf jsdpfjpsdjfpsdj fpsdjfpjsd pf"/>

    </FrameLayout>

    <Switch android:id="@+id/rm_en_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:checked="true"
        android:text="Use read more"/>

    <Switch android:id="@+id/size_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:checked="true"
        android:text="View width"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:text="Top margin"/>
    <SeekBar android:id="@+id/margin_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="56dp"
        android:min="1"
        android:max="10"
        android:progress="0" />

</LinearLayout>
