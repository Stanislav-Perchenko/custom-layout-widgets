<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demoactivity.TagsLayoutDemoActivity">
    <androidx.appcompat.widget.Toolbar android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_weight="0"
        android:theme="@style/ToolbarTheme"
        style="@style/ToolbarStyle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#000"/>

    <com.alperez.widget.customlayout.DiscreteSeekBar android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="#FFF"
        android:textSize="11sp"
        app:colorAxisPoint="#060000"
        app:colorUnselected="#AFAFAF"
        app:colorSelected="#00B09B"
        app:colorHighlighted="#96C93E"
        app:axisStrokeWidth="3dp"
        app:axisToMarkerSpace="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="Left"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <Button android:id="@+id/btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:text="Right"/>
    </LinearLayout>

</LinearLayout>